{
  "name": "mark-scroll-positions",
  "version": "1.7.0",
  "type": "module",
  "scripts": {
    "dev": "vite ./src",
    "build": "vite build",
    "preview": "vite preview",
    "watch": "vite build --watch",
    "prepare:firefox-manifest": "node scripts/prepare-firefox-manifest.mjs",
    "start:firefox": "npm run build && npm run prepare:firefox-manifest && web-ext run --source-dir=./build --target=firefox-desktop",
    "typecheck": "tsc --noEmit",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.2.0",
    "date-fns": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/chrome": "^0.1.1",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "release-it": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.3",
    "vite": "^7.1.11",
    "web-ext": "^9.2.0"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": "npm run typecheck && npm run build",
      "after:bump": "node scripts/sync-manifest-version.mjs"
    },
    "git": {
      "commitMessage": "Release v${version}",
      "tagName": "v${version}"
    }
  }
}
