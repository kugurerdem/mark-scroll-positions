{
    "manifest_version": 3,
    "name": "Mark Scroll Positions",
    "description": "Mark your scroll locations for later.",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "icons": {
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "mark-scroll-positions@rugu.dev"
        }
    }
}
